@model IEnumerable<YourProject.Models.User>

@{
    ViewBag.Title = "Users Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Users Management</h2>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="@Url.Action("Create", "Users", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New User
        </a>
        <form method="get" asp-action="Index" class="d-flex">
            <input type="text" name="search" value="@Request.QueryString["search"]" class="form-control me-2" placeholder="Search users..." />
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </form>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Status</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Role</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { area = "Admin", id = user.UserId })" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="@Url.Action("Details", "Users", new { area = "Admin", id = user.UserId })" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a href="@Url.Action("Delete", "Users", new { area = "Admin", id = user.UserId })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
