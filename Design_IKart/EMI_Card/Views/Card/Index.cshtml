@model EMI_Card.Models.EMICardViewModel

<div class="emi-card-container" style="display: flex; justify-content: center; margin-top: 30px;">
    <div class="emi-card" style="width: 350px; background: linear-gradient(135deg, #1e3c72, #2a5298); color: white; border-radius: 15px; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.2); font-family: 'Segoe UI', sans-serif;">

        <!-- Logo and User Info -->
        <div style="text-align: center;">
            <img src="~/images/Logo.png" alt="Company Logo" style="width: 120px; height: 40px; margin-bottom: 5px;" />
            <h4 style="margin: 5px 0;">@Model.UserName</h4>
            <span style="font-size: 14px;">@Model.CardType EMI Card</span>
        </div>

        <hr style="border-color: rgba(255,255,255,0.3);" />

        <!-- Card Details -->
        <div style="font-size: 14px; line-height: 1.6;">
            <p><strong>Card Number:</strong> @Model.CardNumber</p>
            <p><strong>Valid Till:</strong> @Model.Validity</p>
            <p><strong>Credit Limit:</strong> ₹@Model.CreditLimit.ToString("N0")</p>
        </div>

        <!-- User Photo -->
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <div style="text-align: center; margin-top: 15px;">
                <img src="@Model.ProfileImageUrl" alt="User Photo" style="width: 70px; height: 70px; border-radius: 50%; border: 2px solid white;" />
            </div>
        }
    </div>
</div>
