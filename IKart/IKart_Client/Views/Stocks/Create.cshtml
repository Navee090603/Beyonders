@model IKart_Shared.DTOs.StocksDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Stock";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 heading-title">@ViewBag.Title</h4>
            <a href="@Url.Action("Index", "Stocks")" class="btn btn-outline-secondary btn-sm">
                <i class="fa fa-arrow-left me-1"></i> Back
            </a>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Create", "Stocks", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(m => m.Category, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-control", placeholder = "Enter category" })
                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.SubCategory, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.SubCategory, new { @class = "form-control", placeholder = "Enter sub-category" })
                    @Html.ValidationMessageFor(m => m.SubCategory, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.TotalStocks, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.TotalStocks, new { @class = "form-control", type = "number", min = "0", placeholder = "Enter total stocks" })
                    @Html.ValidationMessageFor(m => m.TotalStocks, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.AvailableStocks, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.AvailableStocks, new { @class = "form-control", type = "number", min = "0", placeholder = "Enter available stocks" })
                    @Html.ValidationMessageFor(m => m.AvailableStocks, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-center gap-4 mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-save me-2"></i> Save
                    </button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="@Url.Action("Index", "Stocks")" class="btn btn-outline-secondary px-4">
                        <i class="fa fa-times me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>
