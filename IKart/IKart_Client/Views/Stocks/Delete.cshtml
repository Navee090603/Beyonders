@model IKart_Shared.DTOs.StocksDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete Stock";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-danger heading-title">@ViewBag.Title</h4>
            
        </div>

        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            <p class="mb-4">Are you sure you want to delete this stock?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-secondary">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Sub Category</dt>
                <dd class="col-sm-9">@Model.SubCategory</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Total Stocks</dt>
                <dd class="col-sm-9">@Model.TotalStocks</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Available Stocks</dt>
                <dd class="col-sm-9">@Model.AvailableStocks</dd>
            </dl>

            @using (Html.BeginForm("Delete", "Stocks", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.StockId)

        <div class="d-flex justify-content-center gap-4 mt-4">
            <button type="submit" class="btn btn-danger px-4">
                <i class="fa fa-trash me-2"></i> Delete
            </button>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="@Url.Action("Index", "Stocks")" class="btn btn-outline-secondary px-4">
                <i class="fa fa-times me-2"></i> Cancel
            </a>
        </div>
            }
        </div>
    </div>
</div>