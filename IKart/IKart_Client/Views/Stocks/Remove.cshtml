@model IKart_Shared.DTOs.StocksDto

@{
    ViewBag.Title = "Remove Stock";
    Layout = "~/Views/Shared/_Layout.cshtml"; // adjust if you have admin layout
}

<div class="container mt-4">
    <h2 class="mb-4">Remove Stock</h2>

    @using (Html.BeginForm("Remove", "Stocks", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.ProductId, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.ProductId, new { @class = "form-control", placeholder = "Enter Product ID" })
            @Html.ValidationMessageFor(m => m.ProductId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Quantity, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "Enter quantity to remove" })
            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Remove Stock</button>
            <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
        </div>
    }
</div>
