
@model IEnumerable<IKart_Shared.DTOs.StocksDto>

@{
    ViewBag.Title = "Stocks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0 heading-title">@ViewBag.Title</h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary btn-sm">
            <i class="fa fa-arrow-left me-1"></i> Back
        </a>
    </div>

    <div class="mb-3">
        <a href="@Url.Action("Create", "Stocks")" class="fa-plus btn btn-success mb-3">
            Add Stock
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Stock Id</th>
                <th>Category</th>
                <th>Sub Category</th>
                <th>Total Stocks</th>
                <th>Available Stocks</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StockId</td>
                    <td>@item.Category</td>
                    <td>@item.SubCategory</td>
                    <td>@item.TotalStocks</td>
                    <td>@item.AvailableStocks</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Stocks", new { id = item.StockId })" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="@Url.Action("Delete", "Stocks", new { id = item.StockId })" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
