@model IKart_Shared.DTOs.UserDto
@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="admin-card p-4">
        <h3 class="heading-title">@Model.FullName Details</h3>
        <table class="table table-bordered table-hover align-middle">
            <tbody>
                <tr>
                    <th style="width: 180px;">User ID</th>
                    <td>@Model.UserId</td>
                </tr>
                <tr>
                    <th>User Name</th>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <th>Full Name</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate.ToString("dd-MM-yyyy")</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>
                        <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                            @Model.Status
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            @Html.ActionLink("← Back to List", "Index", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</div>
