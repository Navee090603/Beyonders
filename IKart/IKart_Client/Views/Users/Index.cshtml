﻿@{
    ViewBag.Title = "Users - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 d-flex flex-column min-vh-100">
    <h2 class="mb-4">Manage Users</h2>

    <!-- Users Table -->
    <div class="flex-grow-1">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Static Example Rows -->
                <tr>
                    <td>1</td>
                    <td>JohnDoe</td>
                    <td>john.doe@example.com</td>
                    <td>9876543210</td>
                    <td>01-08-2025</td>
                    <td class="status-cell">Active</td>
                    <td>
                        <button class="btn btn-outline-success btn-sm me-1" onclick="setStatus(this, 'Active')">
                            <i class="fa fa-check-circle"></i> Active
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="setStatus(this, 'De-active')">
                            <i class="fa fa-ban"></i> De-active
                        </button>
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>JaneSmith</td>
                    <td>jane.smith@example.com</td>
                    <td>9123456780</td>
                    <td>15-07-2025</td>
                    <td class="status-cell">De-active</td>
                    <td>
                        <button class="btn btn-outline-success btn-sm me-1" onclick="setStatus(this, 'Active')">
                            <i class="fa fa-check-circle"></i> Active
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="setStatus(this, 'De-active')">
                            <i class="fa fa-ban"></i> De-active
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    function setStatus(button, status) {
        const row = button.closest('tr');
        const statusCell = row.querySelector('.status-cell');
        statusCell.textContent = status;
    }
</script>