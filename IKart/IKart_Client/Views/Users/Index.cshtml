@model IEnumerable<IKart_Shared.DTOs.UserDto>
@{
    ViewBag.Title = "Users - Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 d-flex flex-column min-vh-100">
    <h2 class="heading-title">Manage Users</h2>

    <div class="flex-grow-1">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="table-dark">
                    <tr class="text-white">
                        <th>User ID</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.CreatedDate.ToString("dd-MM-yyyy")</td>
                            <td>
                                <span class="badge @(user.Status == "Active" ? "bg-success" : "bg-secondary")">
                                    @user.Status
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center flex-wrap gap-2">
                                    @using (Html.BeginForm("View", "Users", new { id = user.UserId }, FormMethod.Get))
                                    {
                                        <button type="submit" class="btn btn-outline-info btn-sm">
                                            <i class="fa fa-eye me-1"></i> View
                                        </button>
                                    }
                                    @using (Html.BeginForm("UpdateStatus", "Users", new { id = user.UserId, status = "Active" }, FormMethod.Post))
                                    {
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="fa fa-check-circle me-1"></i> Activate
                                        </button>
                                    }
                                    @using (Html.BeginForm("UpdateStatus", "Users", new { id = user.UserId, status = "De-active" }, FormMethod.Post))
                                    {
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                                            <i class="fa fa-ban me-1"></i> De-activate
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
