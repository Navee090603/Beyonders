@model IKart_Shared.DTOs.Authentication.UserLoginDto

@{
    ViewBag.Title = "Login";
}

<h2 class="mb-4">Login</h2>

<!-- Show API error messages -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success w-100">Login</button>
}

<div class="mt-3">
    Don’t have an account? @Html.ActionLink("Register here", "Register", "Auth")
</div>
