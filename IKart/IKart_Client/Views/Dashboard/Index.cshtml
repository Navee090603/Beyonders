@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<div class="container mt-4">
    <h2 class="heading-title">Admin Dashboard</h2>

    <div class="row">
        <!-- Tokens Raised -->
        <div class="col-md-6">
            <div class="admin-card mb-4">
                <div class="card-header bg-light fw-semibold text-secondary">
                    <i class="fa fa-tag me-2 text-muted"></i> Tokens Raised</div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">Token #TKN-101 <span class="float-end text-warning">Open</span></li>
                        <li class="mb-2">Token #TKN-102 <span class="float-end text-info">In Progress</span></li>
                        <li>Token #TKN-103 <span class="float-end text-success">Resolved</span></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->

        <div class="col-md-6">
            <div class="admin-card mb-4 h-95">
                <div class="card-header bg-light fw-semibold text-secondary">
                    <i class="fa fa-bolt me-2 text-warning"></i> Quick Actions</div>
                <div class="card-body d-flex flex-column align-items-center gap-100">
                    <a class="btn btn-sm btn-primary mb-1" href="@Url.Action("Create","Products", new { area = "Admin" })">
                        <i class="fa fa-plus me-1"></i> Add Product
                    </a>
                    <a class="btn btn-sm btn-secondary mb-1" href="@Url.Action("Index","Orders", new { area = "Admin" })">
                        <i class="fa fa-truck me-1"></i> View Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
    <div class="row">
        <div class="col-md-12">
            <div class="admin-card mb-4">
                <div class="card-header bg-light fw-semibold text-secondary">
                    <i class="fa fa-chart-line me-2 text-success"></i> Revenue (Last 7 Days)</div>
                <div class="card-body" style="height:300px;">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="admin-card">
                <div class="card-header bg-light fw-semibold text-secondary">
                    <i class="fa fa-receipt me-2 text-primary"></i> Recent Orders</div>
                <div class="card-body">
                    <table id="recentOrders" class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#1001</td>
                                <td>John Doe</td>
                                <td>₹1999.99</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>02-Sep-2025</td>
                            </tr>
                            <tr>
                                <td>#1002</td>
                                <td>Jane Smith</td>
                                <td>₹899.99</td>
                                <td><span class="badge bg-warning text-dark">Pending</span></td>
                                <td>01-Sep-2025</td>
                            </tr>
                            <tr>
                                <td>#1003</td>
                                <td>Rahul Mehta</td>
                                <td>₹4599.00</td>
                                <td><span class="badge bg-info text-dark">Shipped</span></td>
                                <td>31-Aug-2025</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Chart.js Revenue Line Chart
            var ctx = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Day -6', 'Day -5', 'Day -4', 'Day -3', 'Day -2', 'Day -1', 'Today'],
                    datasets: [{
                        label: 'Revenue',
                        data: [1200, 1500, 900, 2000, 1700, 2200, 1900],
                        backgroundColor: 'rgba(173, 216, 230, 0.3)', // pastel blue
                        borderColor: 'rgba(100, 149, 237, 1)', // cornflower blue
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                font: {
                                    family: 'Segoe UI',
                                    weight: '600'
                                }
                            }
                        }
                    }
                }
            });

            // DataTable for recent orders
            $('#recentOrders').DataTable({
                paging: true,
                searching: false,
                info: false
            });
        });
    </script>
}
