@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - IKart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

        .main-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 120px;
        }

        .info-container {
            max-width: 800px;
            width: 100%;
            background-color: white;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 6px;
        }

        h2 {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        p, li {
            font-size: 14px;
            line-height: 1.6;
        }

        .back-link {
            margin-top: 30px;
        }

        footer {
            text-align: center;
            font-size: 1px;
            color: #555;
            padding: 0;
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="info-container">
            @RenderBody()
            <div class="back-link text-end">
                @Html.ActionLink("← Back to Login", "Login", "Auth", null, new { @class = "btn btn-outline-secondary btn-sm" })
            </div>
        </div>
    </div>

    <footer>
        <p>© 2025, IKart.com, Inc. or its affiliates</p>
    </footer>
</body>
</html>
