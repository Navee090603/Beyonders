<header class="admin-topbar navbar navbar-expand bg-white border-bottom">
    <div class="container-fluid d-flex align-items-center">

        <!-- Sidebar Toggle -->
        <button id="sidebarToggle" class="btn btn-link text-dark mr-2">
            <i class="fa fa-bars"></i>
        </button>

        <!-- Full-width Search Bar -->
        <form class="flex-grow-1 mx-2" method="get"
              action="@Url.Action("Index","Orders", new { area = "" })">
            <div class="input-group input-group-sm">
                <!-- reduced height -->
                <input class="form-control" name="q" placeholder="Search orders, products, customers" />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Notifications + Profile -->
        <ul class="nav align-items-center">
            <!-- Notifications -->
            <li class="nav-item dropdown mr-3">
                <a class="nav-link dropdown-toggle p-2" href="#" id="notifDropdown" data-toggle="dropdown">
                    <i class="fa fa-bell"></i>
                    <span class="badge badge-warning badge-pill">2</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right p-2"
                     aria-labelledby="notifDropdown" style="min-width:260px; max-width:90vw;">
                    <div class="small text-muted">Notifications</div>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item small" href="#">New order received (#12345)</a>
                    <a class="dropdown-item small" href="#">Tokens Raised</a>
                </div>
            </li>

            <!-- Profile -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle p-2" href="#" id="profileDropdown" data-toggle="dropdown">
                    <i class="fa fa-user-circle"></i> Admin
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" href="#">Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Sign out</a>
                </div>
            </li>
        </ul>
    </div>
</header>
