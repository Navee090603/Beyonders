@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - IKart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

            body > .main-content {
                flex: 1; /* this pushes footer to bottom */
            }

        .login-container {
            max-width: 350px;
            margin: 20px auto;
            background: #fff;
            border: 1px solid #ddd;
            padding: 10px 25px;
            border-radius: 8px;
            box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
        }

        .brand-logo {
            display: flex;
            justify-content: center;
            margin-bottom: 5px;
            padding-top: 80px;
        }

            .brand-logo img {
                max-width: 170px;
            }

        .login-title {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 4px;
            font-size: 14px;
        }

        .btn-login {
            background-color: #f0c14b;
            border-color: #a88734 #9c7e31 #846a29;
            color: #111;
            font-weight: 600;
        }

            .btn-login:hover {
                background-color: #ddb347;
            }

        .extra-links {
            font-size: 13px;
            margin-top: 15px;
            text-align: center;
        }

            .extra-links a {
                color: #0066c0;
                text-decoration: none;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }

        footer {
            text-align: center;
            font-size: 12px;
            color: #555;
            padding: 0;
            background-color: #f2f2f2; /* optional, matches body */
        }

            footer a {
                color: #0066c0;
                margin: 0 8px;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    <div class="main-content">
        
        <div class="brand-logo">
            <img src="~/Logo/Logo.png" alt="IKart" />
        </div>

        <div class="login-container">
            @*<div class="login-title">@ViewBag.Title</div>*@
            @RenderBody()
        </div>

        <div class="extra-links">
            <p>
                By continuing, you agree to IKart's
                @Html.ActionLink("Conditions of Use", "ConditionsOfUse", "Info") and
                @Html.ActionLink("Privacy Notice", "PrivacyNotice", "Info").
            </p>
        </div>
      </div>

        <footer>
            <p>© 2025, IKart.com, Inc. or its affiliates</p>
        </footer>
</body>
</html>
