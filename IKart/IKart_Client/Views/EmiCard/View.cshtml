@model IKart_Shared.DTOs.Admin.EmiCardDto
@{
    ViewBag.Title = "EMI Card Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">EMI Card Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Card ID</dt>
        <dd class="col-sm-9">@Model.CardId</dd>

        <dt class="col-sm-3">User Name</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Fee Paid</dt>
        <dd class="col-sm-9">@Model.FeePaid</dd>

        <dt class="col-sm-3">Fee Status</dt>
        <dd class="col-sm-9">@Model.FeeStatus</dd>

        <dt class="col-sm-3">Approval Status</dt>
        <dd class="col-sm-9">@Model.ApprovalStatus</dd>
    </dl>

    <h4 class="mt-4">Documents</h4>
    <div class="form-group">
        <label for="docSelect">Select Document</label>
        <select id="docSelect" class="form-control">
            <option value="">-- Select Document --</option>
            @foreach (var doc in Model.Documents)
            {
                <option value="@Url.Content(doc.FilePath)">
                    @doc.DocumentType (@doc.FileName)
                </option>
            }
        </select>
    </div>

    <div class="mt-3">
        <iframe id="docViewer" src="" style="width:100%; height:600px; border:1px solid #ccc;" hidden></iframe>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "EmiCard")" class="btn btn-secondary">Back</a>
    </div>
</div>

<script>
    document.getElementById("docSelect").addEventListener("change", function () {
        var path = this.value;
        var viewer = document.getElementById("docViewer");
        if (path) {
            viewer.src = path;
            viewer.hidden = false;
        } else {
            viewer.src = "";
            viewer.hidden = true;
        }
    });
</script>
